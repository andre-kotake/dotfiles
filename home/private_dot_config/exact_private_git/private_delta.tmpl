{{ if lookPath "delta" -}}
[core]
  pager = delta

[interactive]
  diffFilter = "delta --color-only --features=styles"

[include]
  path = ./themes

[delta]
  tabs=2
  side-by-side=false
  line-numbers=true
  navigate=true
  syntax-theme="Dracula"
  hyperlinks=true
  features="arctic-fox styles"

[delta "styles"]
  commit-decoration-style="bold yellow ul ol"
  hunk-header-style="file line-number syntax"
  hunk-header-decoration-style="blue ul"
{{- end }}
